@model Cliente
@{
    var Perros =(List<Perro>)ViewBag.Perros;
}
<h1>A un paso de ir a la gran aventura</h1>
<form action="" method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-group">
          <label for="exampleInputEmail1">Nombres </label>
          <input asp-for="Nombres" placeholder="Ingrese su Nombre " class="form-control">
          <small id="emailHelp" class="form-text text-muted">Nombres Completos</small>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Fecha De Nacimiento</label>
          <input asp-for="FechaNacimiento" type="date" class="form-control" id="exampleInputPassword1" placeholder="Fecha De Nacimiento">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Celular</label>
            <input asp-for="Celular" class="form-control" id="exampleInputPassword1" placeholder="Celular">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Correo</label>
            <input asp-for="Correo" type="email" class="form-control" id="exampleInputPassword1" placeholder="Correo">
        </div>
        <div class="form-group">
            <select asp-for="PerroId" class="form-control">
                    @foreach(var v in Perros.Where(x=>x.Id == Perros.Count)){
                        <option value="@v.Id">@v.Id,@v.NombreMascota</option>
                    }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
</form>
@foreach(var p in Perros.Where(x=>x.Id == Perros.Count)){
    <a asp-action="cancelar" asp-route-codigo="@p.Id" class="btn-danger btn-lg">Cancelar</a>
}
