@model Viaje
@if (TempData["mensaje"] != null) {
    <div class="alert alert-success">
        @TempData["mensaje"]
    </div>
}
<h1 style="color: blue; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">Registrar Nuevos Viajes</h1>

<form action="" method="post">
    <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label for="exampleInputEmail1">Foto </label>
            <input asp-for="Foto" placeholder="url de imagen " class="form-control">
            <small id="emailHelp" class="form-text text-muted">Foto traído desde url</small>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Descripcion </label>
            <input asp-for="Descripcion" placeholder=" Descripcion" class="form-control">
            <small id="emailHelp" class="form-text text-muted">Pequeña Descripcion</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Descripcion</label>
            <textarea asp-for="DescripcionCompleta" cols="50" rows="5"></textarea>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Nombre De Partida</label>
            <input asp-for="nombrePartida" placeholder="Nombre de Partida " class="form-control">
            <small id="emailHelp" class="form-text text-muted">Paradero de partida</small>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Nombre De Llegada </label>
            <input asp-for="nombreDestino " placeholder="Nombre De Destino " class="form-control">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Precio </label>
            <input type="number"  asp-for="Costo" placeholder="Precio de Viaje " class="form-control">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Fecha </label>
            <input type="date"  asp-for="Fecha" placeholder="Fecha de Viaje " class="form-control">
        </div>
        <button class="btn btn-primary">Registrar</button>
</form>